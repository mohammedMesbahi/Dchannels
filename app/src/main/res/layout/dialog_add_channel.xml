<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_add_channel.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_channel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Channel Name"
        android:inputType="text"/>
    <EditText
        android:id="@+id/et_channel_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:hint="Description"
        android:inputType="text"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public"
        android:checked="true"
        android:id="@+id/cb_public"
        />

    <!-- Add any additional views you require here -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Channel"
            android:layout_marginRight="6dp"
            android:id="@+id/btn_add_channel"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@color/transparent"
            android:outlineProvider="background"
            android:textColor="@color/black"
            android:id="@+id/btn_cancel"
            />
    </LinearLayout>
</LinearLayout>
