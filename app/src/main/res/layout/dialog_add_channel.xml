<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_add_channel.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_channel_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/sharp_photo_camera_24"
            android:background="@drawable/background_image_channel"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"/>
        <EditText
            android:id="@+id/et_channel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Channel Name"
            android:inputType="text"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_channel_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:hint="Description"
        android:inputType="text"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public"
        android:checked="true"
        android:id="@+id/cb_public"
        />

    <!-- Add any additional views you require here -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Channel"
            android:layout_marginRight="6dp"
            android:id="@+id/btn_add_channel"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@color/transparent"
            android:outlineProvider="background"
            android:textColor="@color/black"
            android:id="@+id/btn_cancel"
            />
    </LinearLayout>
</LinearLayout>
