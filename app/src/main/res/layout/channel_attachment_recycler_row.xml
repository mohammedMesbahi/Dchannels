<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/left_attachment_layout"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_profile"
            android:background="@drawable/circular_bg"
            android:backgroundTint="@color/off_white"
            android:layout_marginRight="10dp"
            android:id="@+id/left_sender_profile_image"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_rounded_corner"
            android:backgroundTint="@color/chat_color_sender"
            android:padding="8dp"
            android:layout_marginEnd="80dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/GentleSeafoam"
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"
                    android:text="mesbahi"
                    android:id="@+id/left_sender_name_tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:text="mesbahi.ed@gmail.com"
                    android:layout_gravity="center_vertical|end"
                    android:id="@+id/left_sender_email_tv"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Hello"
                android:id="@+id/left_text_message_tv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="12:00"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:id="@+id/left_text_message_time_tv"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/chat_color_receiver"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:orientation="vertical"
        android:id="@+id/right_attachment_layout"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/right_text_message_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text=""
            android:layout_gravity="bottom|end"
            android:layout_marginTop="5dp"
            android:id="@+id/right_text_message_time_tv"/>
    </LinearLayout>

</RelativeLayout>